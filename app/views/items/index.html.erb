<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Description</th>
    <th>Price</th>
    <th>Imageurl</th>
    <th>Available</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.subtitle %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= item.imageurl %></td>
    <td><%= item.available %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

